@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}
<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary d-block w-100" asp-controller="Contato" asp-action="Index" role="button">Cancelar exclusão</a>
<a class="btn btn-danger d-block w-100" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar" role="button">Confirmar exclusão</a>